#!/bin/zsh

#Remaps
alias ..="cd ../"
alias ...="cd ../../"
alias .3="cd ../../../"
alias .4="cd ../../../../"
alias .5="cd ../../../../../"
alias .6="cd ../../../../../../"
alias ~="cd $HOME"
alias cat="bat -p --paging=never"
alias cp="cp -iv"
alias df="df -h"
alias diff="batdiff"
alias du="du -h"
alias free="free --human"
alias grep="grep --color=auto"
alias ls="eza-defaults --icons"
alias man="batman"
alias mkdir="mkdir -pv"
alias mv="mv -iv"
alias python="python3"
alias rmf="rm -rf"

cd() {
	builtin cd "$@"
	ll
}
